<h1>Edit your user!</h1>
<%# 
<% <form action="/users" method="post">
    <label for="username">Username:</label>
    <input type="text" name="user[username]" required> <br>

    <label for="email">Email:</label>
    <input type="email" name="user[email]" required> <br>

    <label for="password">Password:</label>
    <input type="password" name="user[password]" required> <br>

    <input type="submit" value="Submit">
</form>  %>

<%= form_with model: @user do |form| %> 

<%= form.label :username %>
<%= form.text_field :username, placeholder: "Your username" %>
<% @user.errors.full_messages_for(:username).each do |message| %>
<br>
<div>
<%= message %>
</div>
<% end %>
 <br>

<%= form.label :email %> 
<%= form.email_field :email, placeholder: "example@mail.com" %>
<br>


<%= form.submit %>

<% end %>

